<!DOCTYPE html>
<html>
    <head>
        <title>
        Furniture
        </title>
    </head>
    <body>
     <% if(type == 0){ %>
         <% include admin.ejs %>
                 <section class="content">
        <div class="container-fluid">
            <div class="block-header">
        </div>

           <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card" style="width:100%; margin-top : 30px">  
                      <div class="body table-responsive">
                        <div class="header">
                            <h2>
                                Furniture
                            </h2>
                            </div> 
                            <br><br>
                          <table class="table table-bordered" border="1" cellpadding="7" cellspacing="7">
                            <tr>
                                <th width="50px">Item id</th>
                                <th>Item Desc</th>
                                <th>Donor id</th>
                                <th>Type</th>
                                <th>Images</th>
                          </tr>
                          <% if(data.length){ 
                            for(var i = 0;i < data.length;i++) { %>
                          <tr>
                            <td><%=data[i].Item_id%></td>
                            <td><%=data[i].Item_desc%></td>
                            <td><%=data[i].Donor_id%></td>
                            <td><%=data[i].Type%></td>
                            <td><img style="width : 200px; height : 300px" src=<%=data[i].Image%>></td>
                          </tr>
                          <% }
                          }else{ %>
                          <tr>
                            <td colspan="3">No user</td>
                          </tr>
                        <% } %>
                        </table>
                        </div>
                    </div>
                </div>
           </div>
           </section>
          </table>
       <br><br>

     <% }else{ %>    
         <% include organisations.ejs %>
                 <section class="content">
        <div class="container-fluid">
            <div class="block-header">
        </div>

           <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card" style="width:100%; margin-top : 30px">  
                      <div class="body table-responsive">
                        <div class="header">
                            <h2>
                                Furniture
                            </h2>
                            </div> 
                            <br><br>
                          <table class="table table-bordered" border="1" cellpadding="7" cellspacing="7">
                            <tr>
                                <th width="50px">Item id</th>
                                <th>Item Desc</th>
                                <th>Type</th>
                                <th>Image</th>
                                <th>Quantity Present</th>
                                <th>Quantity Required</th>
                                <th>Choose</th>
                          </tr>
                          <% if(data.length){ 
                            for(var i = 0;i < data.length;i++) { %>
                          <tr>
                            <form id="me" method="POST" action="/Furniture">
                            <td><input name="Item_id" type="radio" class="with-gap" value=<%=data[i].Item_id%> id=<%=data[i].Item_id%>><label for=<%=data[i].Item_id%>><%=data[i].Item_id%></label></td>
                            <td><%=data[i].Item_desc%></td>
                            <td><%=data[i].Type%></td>
                            <td><img style="width : 200px; height : 300px" src=<%=data[i].Image%>></td>
                            <td><%=data[i].Quantity%></td>
                            <td><input type="number"name="Qty" style="width:50px" required></td>
                            <td><button type="submit">choose</button></td>
                            </form>
                          </tr>
                          <% }
                          }else{ %>
                          <tr>
                            <td colspan="4">No user</td>
                          </tr>
                        <% } %>
                        </table>
                        </div>
                    </div>
                </div>
           </div>
           </section>
         <br><br>
                   <% } %> 

</body>
</html> 
