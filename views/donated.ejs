<!DOCTYPE html>
<html>
    <head>
        <title>
            Donated
        </title>
    </head>
    <body>
         <% include admin.ejs %>
                 <section class="content">
        <div class="container-fluid">
            <div class="block-header">
        </div>

           <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card" style="width:80%; margin-left : 40px; margin-top : 30px">  
                      <div class="body table-responsive">
                        <div class="header">
                            <h2>
                                Transactions
                            </h2>
                            </div> 
                            <br><br>
                          <table class="table table-bordered" border="1" cellpadding="7" cellspacing="7">
                            <tr>
                                <th width="50px">Donated id</th>
                                <th>Donor id</th>
                                <th>Item id</th>
                                <th>Organisation id</th>
                                <!--<th>Age Group</th>-->
                          </tr>
                          <% if(data.length){ 
                            for(var i = 0;i < data.length;i++) { %>
                          <tr>
                            <form id="me" method="POST" action="/donated">
                            <!--<td><%=(i+1)%></td>-->
                            <td><%=data[i].Donated_id%></td>
                            <td><%=data[i].Donor_id%></td>
                            <td><%=data[i].Item_id%></td>
                            <td><%=data[i].Org_id%></td>
                          <!-- <td><%=data[i].Size%></td>-->
                            <!--<td><%=data[i].AgeGrp%></td>-->
                            </form>
                          </tr>
                          <% }
                          }else{ %>
                          <tr>
                            <td colspan="3">No user</td>
                          </tr>
                        <% } %>
                        </table>
                        </div>
                    </div>
                </div>
           </div>
           </section>
       <br><br>
</body>
</html> 
